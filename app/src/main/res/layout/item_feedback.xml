<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rvContent"
        android:layout_marginTop="@dimen/offset_item"
        android:layout_marginBottom="@dimen/offset_item"
        android:layout_toStartOf="@id/ivSendMessage"
        android:hint="@string/enter_message_hint"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="@dimen/offset_item"
        android:textSize="@dimen/text_size"
        />

    <ImageView
        android:id="@+id/ivSendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/etMessage"
        android:layout_alignParentEnd="true"
        android:baselineAlignBottom="true"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/ic_send_black_24dp"
        />

</RelativeLayout>