<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ContactStyle"/>

    <style name="ContactStyle.ItemLayout">
        <item name="android:layout_height">@dimen/size_item_contact</item>
        <item name="android:layout_width">@dimen/size_item_contact</item>
    </style>

    <style name="ContactStyle.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_item_contact</item>
    </style>

    <style name="ContactStyle.Layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start_consider_offset</item>
        <item name="android:layout_marginTop">@dimen/standard_margin_half</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin_half</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AchievementStyle">
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="AboutStyle">
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
    </style>

    <style name="SendMessageStyle"/>

    <style name="SendMessageStyle.TextInput">
        <item name="android:imeOptions">actionSend|flagNoExtractUi</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/enter_message_hint</item>
    </style>

    <style name="SendMessageStyle.IconSend">
        <item name="android:contentDescription">@string/content_description_send_message</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="SendMessageStyle.Layout">
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
    </style>

    <style name="TextAppearance.Achievement" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="TextAppearance.About" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="TextAppearance.Disclaimer" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

</resources>
